// common.styl
// Root Stylus stylesheet source for anna-squares

body
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  padding-top: 45px;

b,
strong
  font-weight: bold;

h1,
h2,
h3,
h4,
h5,
h6,
.h1,
.h2,
.h3,
.h4,
.h5,
.h6
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: normal;

a,
a:hover,
a:active,
a:focus,
button
  outline: 0;
  outline: none;
  -webkit-appearance: none;

.jumbotron
  font-weight: normal;

.jumbotron > h3
  margin-bottom: 21px;

.navbar
  font-weight: normal;

.navbar .dropdown-menu > li > a,
.navbar .dropdown-menu > li > a:focus
  font-weight: normal;

label,
.control-label,
.help-block,
.checkbox,
.radio
  font-size: 13px;
  font-weight: bold;

hr
  margin-top: 0;
  margin-bottom: 5px;
  border-top: 1px solid #ccc;

pre
  border-radius: 0;


.alert
  border-radius: 0;

.ls-container-full
  width: 100%;
  min-height: 45px;
  margin: 0;
  
.ls-jumbotron-top
  background: #006698;

.ls-jumbotron-bottom
  background: #3f4245;

.ls-container-full .jumbotron
  padding: 0;
  background: transparent;
  color: #fff;

.ls-btn-hollow
  background: none;
  color: #fff;

.btn-md.ls-btn-hollow
  padding: 10px 28px;

.btn
  border-radius: 0;

.navbar-nav>li.ls-accent
  background: #484848;

.form-control
  border-radius: 0;

.glyphicon
  color: #333;

.well
  margin-bottom: 10px;
  border-radius: 0;

.well-lg
  border-radius: 0;

.well-sm
  border-radius: 0;

.ls-noborder
  border: none;

.ls-footer
  padding-top: 10.5px;
  font-size: 13px;

.ls-footer a,
.ls-footer a:hover,
.ls-footer a:focus
  color: #000;
  text-decoration: none;

.ls-footer .ls-copyright
  color: #666;

.ls-footer .ls-license
  color: #666;

.ls-form
  font-size: 13px;

.ls-form p
  line-height: 1.1;

.ls-form .ls-field-help
  margin-top: 5px;

.panel-default > .panel-heading
  background-color: #dadada;
  border-color: #dadada;


.ls-sidebar.affix
  position: static;

.ls-sidenav
  margin-top: 30px;
  margin-bottom: 30px;
  padding-top:    10px;
  padding-bottom: 10px;
  background-color: #eee;
  border-radius: 0px;

.ls-sidebar .nav > li > a
  display: block;
  color: #666;
  padding: 5px 20px;
  border-left: 2px solid transparent;

.ls-sidebar .nav > li > a:hover,
.ls-sidebar .nav > li > a:focus
  text-decoration: none;
  background-color: #ccc;
  border-left: 2px solid #006698;

.ls-sidebar .nav > .active > a,
.ls-sidebar .nav > .active:hover > a,
.ls-sidebar .nav > .active:focus > a
  font-weight: bold;
  color: #333;
  background-color: transparent;
  border-left: 2px solid #006698;

.ls-sidebar .nav .nav
  display: none;
  margin-bottom: 8px;

.ls-sidebar .nav .nav > li > a
  padding-top: 3px;
  padding-bottom: 3px;
  padding-left: 30px;
  font-size: 90%;

@media (min-width: 992px)
  .ls-sidebar .nav > .active > ul
    display: block;

  .ls-sidebar.affix,
  .ls-sidebar.affix-bottom
    width: 213px;

  .ls-sidebar.affix
    position: fixed;
    top: 110px;

  .ls-sidebar.affix-bottom
    position: alsolute;

  .ls-sidebar.affix-bottom .ls-sidenav,
  .ls-sidebar.affix .ls-sidenav
    margin-top: 0;
    margin-bottom: 0;

@media (min-width: 1200px)
  .ls-sidebar.affix-bottom,
  .ls-sidebar.affix
    width: 263px;


.as-btn-offset
  margin-top: 22px;